@using StockTrack.Dto.Password

@model ForgetPasswordDto
@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Şifre Sıfırlama | Ordinatrum</title>
   @await Component.InvokeAsync("Head")
    
</head>

<body>
    <div class="authentication-bg min-vh-100">
        <div class="bg-overlay bg-light"></div>
        <div class="container">
            <div class="d-flex flex-column min-vh-100 px-3 pt-4">
                <div class="row justify-content-center my-auto">
                    <div class="col-md-8 col-lg-6 col-xl-5">

                        <div class="mb-4 pb-2 text-center">
                            <a href="/" class="d-block auth-logo">
                                <img src="/logoimage/logo.png" alt="Logo" height="40">
                            </a>
                        </div>

                        <div class="card">
                            <div class="card-body p-4">

                                <h5 class="text-center">Şifre Sıfırlama</h5>
                                <div class="alert alert-success text-center small mb-4" role="alert">

                                    <p class="text-muted">E-posta adresinizi girerek şifre sıfırlama bağlantısını alabilirsiniz.</p>
                                </div>


                                <div class="p-2 mt-4">
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                                    }
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger small" role="alert"></div>

                                    <form asp-action="ForgetPassword" method="post">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label"></label>
                                            <div class="position-relative input-custom-icon">
                                                <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" />
                                                <span class="bx bx-mail-send"></span>
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger small"></span>
                                        </div>

                                        <div class="mt-4">
                                            <button class="btn btn-primary w-100" type="submit">Sıfırlama Bağlantısı Gönder</button>
                                        </div>

                                        <div class="mt-4 text-center">
                                            <p class="mb-0">Şifrenizi hatırlıyor musunuz? <a href="/Auth/Login" class="fw-medium text-primary">Giriş Yap</a></p>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center p-4">
                            <p>© <script>document.write(new Date().getFullYear())</script> Ordinatrum</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- JavaScript -->
   @await Component.InvokeAsync("Scripts")
</body>
</html>
