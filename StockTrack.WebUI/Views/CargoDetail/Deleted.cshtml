@model List<ResultCargoDeletedDto>
@{
    ViewData["Title"] = "Silinen Kargolar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-2">
    <h4>Silinen Kargolar</h4>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<table id="DataTables" class="display table table-striped align-middle w-100">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Talep Açan</th>
            <th>Talep Tarihi</th>
            <th>Depo</th>
            @* <th>Kategori</th> *@
            <th>Ürün</th>
            @* <th>Adet</th> *@
            @* <th>Fotoğraf</th> *@
            <th>Lokasyon</th>
            <th>Adres</th>
            <th>Alıcı</th>
            <th>Silen Kişi</th>
            <th>Silinme Tarihi</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tfoot class="table-light">
        <tr>
            <th>#</th>
            <th>Talep Açan</th>
            <th>Talep Tarihi</th>
            <th>Depo</th>
            @* <th>Kategori</th> *@
            <th>Ürün</th>
            @* <th>Adet</th> *@
            @* <th>Fotoğraf</th> *@
            <th>Lokasyon</th>
            <th>Adres</th>
            <th>Alıcı</th>
            <th>Silen Kişi</th>
            <th>Silinme Tarihi</th>
            <th></th>
        </tr>
        </tfoot>
    <tbody>
        @{
            var i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@item.RequestFormBy</td>
                    <td>@item.RequestFormDate.ToString("dd MMMM yyyy HH:mm")</td>
                    <td>@item.MainRepoName</td>

                    <td>
                        <ul class="mb-0 ps-3 list-unstyled">
                            @foreach (var product in item.Products)
                            {
                                <li class="d-flex align-items-center mb-1">
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        var imgPath = "/productimages/" + product.ImageUrl;
                                        <a href="javascript:void(0);"
                                           class="d-inline-block preview-img me-2"
                                           data-img="@imgPath"
                                           data-alt="@imgPath">
                                            <img src="@imgPath" class="rounded-circle avatar-sm" />
                                        </a>
                                    }

                                    <span>@product.CategoryName - @product.ProductName (@product.Quantity Adet)</span>
                                </li>
                            }
                        </ul>
                    </td>
                    <td>@item.LocationName</td>
                    <td class="text-break">@item.LocationAdress</td>
                    <td>@item.ReceiverFullName</td>
                    <td>@item.DeletedBy</td>
                    <td>@(item.DeletedDate.Value.ToString("dd MMMM yyyy HH:mm") ?? "") </td>

                    <td>
                        <span class="badge bg-danger">Silindi</span>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Resim Önizleme Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid rounded" style="max-height:70vh;">
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
            // Resim önizleme
            $(document).on("click", ".preview-img", function () {
                const imgSrc = $(this).data("img");
                const imgAlt = $(this).data("alt") || "";
                $("#modalImage").attr({ src: imgSrc, alt: imgAlt });
                $("#imageModal").modal("show");
        });
    </script>
}

