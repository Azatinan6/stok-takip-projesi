@model StockTrack.Dto.Hospital.HospitalAddDto

@{
    ViewData["Title"] = "Yeni Hastane Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header text-white">
        <h3>🏥 Yeni Hastane Ekle</h3>
    </div>
    <div class="card-body">
        <form asp-action="Add" method="post">

            <div asp-validation-summary="All" class="alert-danger"></div>

            <div class="row">
                <div class="col-md-6 border-end">
                    <h5 class="text-primary mb-3">Genel Bilgiler</h5>

                    <div class="mb-3">
                        <label>Hastane Adı</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Şube / Bölüm</label>
                        <input asp-for="Branch" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Şehir</label>
                            <input asp-for="City" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Telefon</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Web Site</label>
                            <input asp-for="WebSite" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Address</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                </div>

                <div class="col-md-6 bg-light p-3 rounded">
                    <h5 class="text-danger mb-3">🛠️ Teknik & Entegrasyon</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>HBYS Yazılımı</label>
                            <input asp-for="HbysName" class="form-control" placeholder="Örn: Fonet" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Versiyon</label>
                            <input asp-for="HbysVersion" class="form-control" placeholder="v2.0" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Kurulum Tarihi</label>
                        <input asp-for="InstallationDate" type="date" class="form-control" />
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label>Entegrasyon URL</label>
                        <input asp-for="IntegrationUrl" type="url" class="form-control" placeholder="http://..." />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Kullanıcı Adı</label>
                            <input asp-for="IntegrationUsername" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Şifre</label>
                            <input asp-for="IntegrationPassword" type="password" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success mt-3">💾 Kaydet</button>
            </div>
            <div class="d-flex justify-content-start">
                 <a asp-controller="Hospital" asp-action="Index" class="btn btn-secondary">
                 <i class="fa fa-arrow-left"></i>Hastane Listesine Dön
                 </a>
            </div>
            
        </form>
    </div>
    
</div>