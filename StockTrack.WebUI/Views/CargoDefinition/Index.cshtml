@model List<StockTrack.Entity.Enitities.CargoDefinition>
@{
    ViewData["Title"] = "Kontrol Sonucu Tanımları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4 border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">📦 Kontrol Sonucu Tanımları</h6>
        <button class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#createDefModal">
            <i class="fa fa-plus"></i> Yeni Sonuç Ekle
        </button>
    </div>

    <div class="card-body p-0">
        <div class="list-group list-group-flush">

            <div class="list-group-item bg-light text-muted fw-bold d-flex justify-content-between px-4 py-3">
                <span class="col-2">#ID</span>
                <span class="col-6">Kontrol Sonucu / Tanım Adı</span>
                <span class="col-4 text-end">İşlemler</span>
            </div>

            @foreach (var item in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center px-4 py-3 hover-shadow">
                    <span class="col-2 text-muted">@item.Id</span>
                    <span class="col-6 fw-bold text-dark">@item.Name</span>
                    <span class="col-4 text-end">
                        <button type="button" class="btn btn-warning btn-sm shadow-sm"
                                onclick="openEditDefModal(@item.Id, '@item.Name')">
                            Düzenle
                        </button>
                        <a href="/CargoDefinition/Delete/@item.Id" class="btn btn-danger btn-sm shadow-sm">Sil</a>
                    </span>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="createDefModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Yeni Kontrol Sonucu Ekle</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form action="/CargoDefinition/Create" method="post">
                <div class="modal-body p-4">
                    <label class="form-label fw-bold">Tanım Adı</label>
                    <input type="text" class="form-control" name="Name" required placeholder="Örn: Kutu Hasarlı, Teslim Alınmadı" />
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-primary w-100">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editDefModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Tanımı Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/CargoDefinition/Edit" method="post">
                <div class="modal-body p-4">
                    <input type="hidden" id="editDefId" name="Id" />
                    <label class="form-label fw-bold">Tanım Adı</label>
                    <input type="text" class="form-control" id="editDefName" name="Name" required />
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-warning w-100">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openEditDefModal(id, name) {
        document.getElementById('editDefId').value = id;
        document.getElementById('editDefName').value = name;
        var myModal = new bootstrap.Modal(document.getElementById('editDefModal'));
        myModal.show();
    }
</script>