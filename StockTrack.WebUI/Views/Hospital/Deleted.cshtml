@using StockTrack.Dto.Hospital
@model IEnumerable<HospitalDeletedDto>

@{
    ViewData["Title"] = "Silinen Hastaneler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Silinen Hastaneler</h4>
<hr />

<table id="DataTables" class="display" style="width:100%">
    <thead>
        <tr>
            <th>#Id</th>
            <th>Kurum Adı</th>
            <th>Şube</th>
            <th>HBYS</th>
            <th>Versiyon</th>
            <th>Silinme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (var hospital in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@hospital.Name</td>
                <td>@hospital.Branch</td>
                <td>@(hospital.HbysName ?? "-")</td>
                <td>@(hospital.HbysVersion ?? "-")</td>
                <td>@hospital.DeletedDate?.ToString("dd MMMM yyyy HH:mm")</td>
                <td>
                    <a asp-controller="Hospital" asp-action="Restore" asp-route-id="@hospital.Id" class="btn btn-success btn-sm">
                        ♻️ Geri Yükle
                    </a>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Hospital" asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i>Hastane Listesine Dön
    </a>
</div>





