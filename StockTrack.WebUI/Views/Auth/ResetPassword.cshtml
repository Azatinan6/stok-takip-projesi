@using StockTrack.Dto.PasswordDto
@model ResetPasswordDto
@{
    Layout = null;
}

<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <title>Şifre Sıfırlama | webadmin - Admin Paneli</title>
    @await Component.InvokeAsync("Head")
</head>

<body>

    <div class="authentication-bg min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow">
                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <div class="avatar-lg mx-auto">
                                    <div class="avatar-title rounded-circle bg-light text-primary">
                                        <i class="bx bx-lock-alt h2 mb-0"></i>
                                    </div>
                                </div>
                                <h4 class="mt-3">Şifreni Sıfırla</h4>
                                <p class="text-muted">Yeni bir şifre belirlemek için aşağıdaki alanları doldur.</p>
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="Token" />
                                <input type="hidden" asp-for="Email" />

                                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                                <div class="mb-3">
                                    <label for="newPassword" class="form-label">Yeni Şifre</label>
                                    <input type="password" class="form-control" id="newPassword" asp-for="Password" required placeholder="Yeni şifre">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="confirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                                    <input type="password" class="form-control" id="confirmPassword" asp-for="ConfirmPassword" required placeholder="Yeni şifre tekrar">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
                                </div>
                            </form>

                            <div class="mt-4 text-center">
                                <a href="/Auth/Login" class="text-muted">
                                    <i class="mdi mdi-arrow-left me-1"></i> Giriş sayfasına dön
                                </a>
                            </div>

                        </div>
                    </div>

                    <div class="mt-4 text-center text-muted">
                        © <script>document.write(new Date().getFullYear())</script> webadmin.
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- JS -->
    @await Component.InvokeAsync("Scripts")
</body>
</html>

