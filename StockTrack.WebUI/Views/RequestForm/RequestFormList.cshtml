@model List<RequestedForRequestFormDto>
@{
    ViewData["Title"] = "Oluşturulan Talepler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-2">
    <h4>Oluşturulan Talepler</h4>
</div>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<table id="DataTables" class="display" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Talep Oluşturan</th>
            <th>Talep Tarihi</th>
            <th>Türü</th>
            <th>Depo</th>
            <th>Lokasyon</th>
            <th>Adres</th>
            <th>Alıcı</th>
            <th>Telefon</th>
            <th>Kurulum & Servis Tarihi</th>
            <th>Personeller</th>
            @* <th>Kategori</th> *@
            <th>Ürün</th>
            @* <th>Adet</th> *@
            @* <th>Fotoğraf</th> *@
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>#</th>
            <th>Talep Oluşturan</th>
            <th>Talep Tarihi</th>
            <th>Türü</th>
            <th>Depo</th>
            <th>Lokasyon</th>
            <th>Adres</th>
            <th>Alıcı</th>
            <th>Telefon</th>
            <th>Kurulum & Servis Tarihi</th>
            <th>Personeller</th>
            @* <th>Kategori</th> *@
            <th>Ürün</th>
            @* <th>Adet</th> *@
            @* <th></th> *@
            <th>Durum</th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @{
            var count = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@(item.RequestBy)</td>
                    <td>@item.RequestDate?.ToString("dd MMMM yyyy HH:mm")</td>
                    <td>
                        @(
                        item.RequestFormTypeId == (int)EnumRequestType.Kargo ? "Kargo" :
                        item.RequestFormTypeId == (int)EnumRequestType.Kurulum ? "Kurulum" :
                        item.RequestFormTypeId == (int)EnumRequestType.Servis ? "Servis" : "Belirtilmemiş")
                    </td>
                    <td>@(item.MainRepoLocationName)</td>
                    <td>@(item.Location)</td>
                    <td>@(item.Address)</td>
                    <td>@(item.ReceiverName)</td>
                    <td>@(item.Phone)</td>
                    <td>@(item.InstallationDate?.ToString("dd MMMM yyyy"))</td>
                    <td>
                        <ul class="mb-0 ps-3">
                            @foreach (var person in item.Persons)
                            {
                                <li>@person</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul class="mb-0 ps-3">
                            @foreach (var product in item.Products)
                            {
                                <li>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            var imgPath = "/productimages/" + product.ImageUrl;
                                            <div class="avatar-group-item me-2">
                                                <a href="javascript:void(0);" class="d-inline-block preview-img" data-img="@imgPath">
                                                    <img src="@imgPath" class="rounded-circle avatar-sm" alt="Ürün Resmi" />
                                                </a>
                                            </div>
                                        }
                                        <div class="product-info">
                                            @product.CategoryName - @product.ProductName @product.Quantity Adet
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </td>
                 
                  
                    
                    <td>
                        <span class="badge bg-info">
                            @(item.RequestStatusId == (int)EnumStatusType.Talep ? "Beklemede" : "")
                        </span>
                    </td>
                    <td>
                        <button type="button"
                                class="btn btn-sm btn-primary change-request-status-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#requestStatusModal"
                                data-request-id="@item.RequestFormDetailId"
                                data-request-by="@item.RequestBy"
                                data-request-date="@item.RequestDate?.ToString("dd MMMM yyyy HH:mm")">
                            <i class="mdi mdi-check-circle-outline"></i> Talep Durumunu Değiştir
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="" class="img-fluid rounded" style="max-height:70vh;">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="requestStatusModal" tabindex="-1" aria-labelledby="requestStatusLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="SaveRequestFormStatus" method="post">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title" id="requestStatusLabel">Talep Durumu Değiştir</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>

                <div class="modal-body">
                    <div class="border rounded p-3 mb-3 bg-light">
                        <strong>Talep Bilgileri:</strong>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Talep Eden:</strong> <span id="summaryRequestBy">-</span></li>
                            <li><strong>Talep Tarihi:</strong> <span id="summaryRequestDate">-</span></li>
                        </ul>
                    </div>

                    <input type="hidden" name="RequestFormDetailId" id="requestFormId" />

                    <div class="row g-3">
                        <div class="col-md-6 d-flex align-items-center gap-2">
                            <label class="form-label mb-0">Durum <span class="text-danger">*</span></label>
                            <select name="StatusId" id="status" class="form-select" required style="top:30px;">
                                <option value="">-- Seçiniz --</option>
                                <option value="@((int)EnumStatusType.OnayBekliyor)">Onayla</option>
                                <option value="@((int)EnumStatusType.İptal)">İptal Et</option>
                            </select>
                        </div>

                        <div id="cancelReasonField" class="col-md-12 d-none">
                            <label class="form-label">İptal Sebebi <span class="text-danger">*</span></label>
                            <textarea name="CancelledDesc" id="cancelReason" class="form-control" rows="3" maxlength="500"></textarea>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="mdi mdi-content-save"></i> Kaydet
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
     

        $(document).on("click", ".preview-img", function () {
            const imgSrc = $(this).data("img");
            $("#modalImage").attr("src", imgSrc);
            $("#imageModal").modal("show");
        });

        // Durum seçimine göre iptal sebebi alanını göster/gizle
        function syncRequired() {
            const st = parseInt($("#status").val() || 0, 10);
            // Canceled enum değeri için doğru kontrolü yap
            const needCancel = (st === @((int)EnumStatusType.İptal));

            $("#cancelReasonField").toggleClass("d-none", !needCancel);
            $("#cancelReason").prop("required", needCancel);

            if (!needCancel) {
                $("#cancelReason").val("");
            }
        }

        // Modal açan buton (talep durumu için)
        $(document).on("click", ".change-request-status-btn", function () {
            const d = $(this).data();

            $("#requestFormId").val(d.requestId);
            $("#summaryRequestBy").text(d.requestBy || "-");
            $("#summaryRequestDate").text(d.requestDate || "-");

            $("#status").val("").trigger("change");
            syncRequired();
        });

        // Durum değişince kuralı uygula
        $("#status").on("change", syncRequired);

        // Silme işlemi
        $(document).on('click', '.delete-request-btn', function (e) {
            e.preventDefault();
            var requestId = $(this).data('id');
            var url = '/RequestForm/DeleteRequest/' + requestId;

            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu talep kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: url,
                        type: 'POST',
                        dataType: 'json',
                        success: function (response) {
                            if (response.success) {
                                Swal.fire('Silindi!', response.message, 'success');
                                setTimeout(function() {
                                    location.reload();
                                }, 2000);
                            } else {
                                Swal.fire('Hata!', response.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Hata!', 'Sunucu ile iletişim kurulamadı.', 'error');
                        }
                    });
                }
            });
        });
    </script>
}