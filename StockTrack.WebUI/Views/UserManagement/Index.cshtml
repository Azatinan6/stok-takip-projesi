@model List<UserWithRoleDto>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<span id="assignRoleError" class="text-danger mb-2" style="display:none;"></span>

<div class="d-flex justify-content-between align-items-center mt-3">
    <h4>Kullanıcı Listesi</h4>

</div>

<table id="DataTables" class="display" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Oluşturulma Tarihi</th>
            <th>Role</th>
            @if (User.IsInRole(RoleConsts.Admin))
            {
                <th>Aktif mi?</th>
                <th>İşlemler</th>
            }

        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Oluşturulma Tarihi</th>
            <th>Role</th>
            <th>Aktif mi?</th>
            <th></th>


        </tr>
    </tfoot>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(count++)</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.CreatedDate.ToString("dd-MMMM-yyyy")</td>
                <td>
                    @(user.RoleName != null ? user.RoleName : "Rol ataması yapılmadı")
                </td>
                @if (User.IsInRole(RoleConsts.Admin))
                {
                    <td>
                        <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                            @(user.IsActive ? "Aktif" : "Pasif")
                        </span>
                    </td>
                    <td>
                        <a asp-action="EditUser" asp-route-userId="@user.Id" class="btn btn-sm btn-warning">
                            <i class="mdi mdi-pencil"></i> Düzenle
                        </a>
                        <button class="btn btn-sm btn-primary assign-role-btn" data-bs-toggle="modal" data-bs-target="#assignRoleModal" data-user-id="@user.Id" data-user-name="@user.FullName">
                            <i class="mdi mdi-account-key-outline"></i> Rol Ata
                        </button>

                        <a href="#" class="btn btn-sm btn-danger reset-password-btn" data-user-id="@user.Id" data-user-name="@user.FullName" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                            <i class="mdi mdi-lock-reset"></i> Şifre Sıfırla
                        </a>
                        <!-- aktif/pasif -->
                        @if (user.IsActive)
                        {
                            <button type="button"
                                    class="btn btn-sm btn-danger toggle-active-btn"
                                    data-url="@Url.Action("DeactivateUser", "UserManagement", new { userId = user.Id })"
                                    data-user-name="@user.FullName"
                                    data-action="deactivate">
                                <i class="mdi mdi-account-off-outline"></i> Pasif Yap
                            </button>
                        }
                        else
                        {
                            <button type="button"
                                    class="btn btn-sm btn-success toggle-active-btn"
                                    data-url="@Url.Action("ActivateUser", "UserManagement", new { userId = user.Id })"
                                    data-user-name="@user.FullName"
                                    data-action="activate">
                                <i class="mdi mdi-account-check-outline"></i> Aktif Yap
                            </button>
                        }

                        <!-- Sil -->
                        <button type="button"
                                class="btn btn-sm btn-danger delete-user-btn"
                                data-url="@Url.Action("DeleteUser", "UserManagement", new { id = user.Id })"
                                data-user-name="@user.FullName">
                            <i class="mdi mdi-delete"></i> Sil
                        </button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole(RoleConsts.Admin))
{
    <div class="d-flex justify-content-end align-items-center mt-4">
        <button type="button" class="btn btn-secondary m-1" onclick="window.history.back();">
            <i class="mdi mdi-arrow-left-bold-circle"></i> Geri Dön
        </button>

        <a asp-controller="UserManagement" asp-action="CreateUser" class="btn btn-primary">
            <i class="mdi mdi-plus-circle"></i> Yeni Kullanıcı Ekle
        </a>
    </div>


    <!-- Rol atama Modal -->
    <div class="modal fade" id="assignRoleModal" tabindex="-1" aria-labelledby="assignRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="assignRoleForm" method="post" asp-action="AssignRole">
                    <div class="modal-header">
                        <h5 class="modal-title" id="assignRoleModalLabel">Rol Ata</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="UserId" name="UserId" />

                        <div class="mb-3">
                            <label for="UserFullName" class="form-label">Kullanıcı</label>
                            <input type="text" id="UserFullName" class="form-control" disabled />
                        </div>


                        <div class="mb-3">
                            <label for="RoleId" class="form-label">Rol Seçiniz</label>
                            <select class="form-select" id="RoleId" name="RoleName" required>
                                <option value="">Seçiniz</option>
                                @foreach (var role in RoleConsts.Roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                            <span id="roleError" class="text-danger" style="display:none;"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Şifre Sıfırlama Modalı -->
    <div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="resetPasswordModalLabel">
                        <i class="mdi mdi-alert"></i> Şifre Sıfırlama
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>

                <form id="resetPasswordForm" method="post" asp-action="ResetPassword">
                    <div class="modal-body">

                        <p><strong><span id="resetUserName"></span></strong> adlı kullanıcı için yeni şifre giriniz:</p>

                        <input type="hidden" name="UserId" id="resetUserId" />

                        <div class="mb-3">
                            <label for="NewPassword" class="form-label">Yeni Şifre</label>
                            <input type="password" class="form-control" id="NewPassword" name="Password" required minlength="6" />
                        </div>

                        <div class="mb-3">
                            <label for="ConfirmPassword" class="form-label">Şifreyi Doğrula</label>
                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required minlength="6" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="mdi mdi-lock-reset"></i> Şifreyi Sıfırla
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@section Scripts {

    <script>
        // rol atama modalı
        $(document).on('click', '.assign-role-btn', function () {
            var userId = $(this).data('user-id');
            var userName = $(this).data('user-name');

            $('#UserId').val(userId);
            $('#UserFullName').val(userName);
        });

        $(document).ready(function () {
            $('#assignRoleForm').on('submit', function (e) {
                e.preventDefault(); // Formun normal gönderilmesini engelle

                const form = this;

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kullanıcıya seçilen rol atanacak.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, Ata!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // Onay verildiyse form gönderilsin
                    }
                });
            });
        });


        // şifre sıfırlama modalı
        $(document).on('click', '.reset-password-btn', function () {
            const userId = $(this).data('user-id');
            const userName = $(this).data('user-name');

            $('#resetUserId').val(userId);
            $('#resetUserName').text(userName);
        });

         $(document).ready(function () {
            $('#resetPasswordForm').on('submit', function (e) {
                e.preventDefault(); // Formun doğrudan submit edilmesini engeller

                const form = this;

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Seçilen kullanıcının şifresi değiştirilecektir.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, Değiştir!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });


        //aktif yapma pasif yapma scripti
          $(document).on('click', '.toggle-active-btn', function (e) {
          e.preventDefault();

          const $btn    = $(this);
          const url     = $btn.data('url');
          const name    = $btn.data('user-name');
          const action  = $btn.data('action');    // "activate" veya "deactivate"

          const isDeactivate     = action === 'deactivate';
          const titleText        = isDeactivate
                                  ? `${name} adlı kullanıcı pasif hale getirilecek`
                                  : `${name} adlı kullanıcı aktif hale getirilecek`;
          const confirmButtonTxt = isDeactivate
                                  ? 'Evet, pasif yap'
                                  : 'Evet, aktif yap';

          Swal.fire({
            title: titleText,
            text: 'Devam etmek istediğinize emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: confirmButtonTxt,
            cancelButtonText: 'Hayır'
          }).then((result) => {
            if (!result.isConfirmed) return;

            // AJAX POST isteği
            $.ajax({
              url: url,
              type: 'POST',
              dataType: 'json',
              success: function(data) {
                Swal.fire({
                  icon: data.success ? 'success' : 'error',
                  title: data.success ? 'Başarılı' : 'Hata',
                  text: data.message
                }).then(() => {
                  // Listeyi yeniden yükle
                  location.reload();
                });
              },
              error: function(xhr) {
                // Eğer 400/404 döndüyse responseJSON içinde message olabilir
                const resp = xhr.responseJSON || {};
                Swal.fire({
                  icon: 'error',
                  title: 'İşlem Başarısız',
                  text: resp.message || 'Beklenmeyen bir hata oluştu.'
                });
              }
            });
          });
        });

        //user silme
        $(document).ready(function () {
            $('.delete-user-btn').on('click', function () {
                const $btn = $(this); // Tıklanan buton
                const userName = $btn.data('user-name');
                const url = $btn.data('url');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: `"${userName}" kullanıcısını silmek istediğinize emin misiniz?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Butonu devre dışı bırak
                        $btn.prop('disabled', true);

                        // Yükleniyor mesajı
                        Swal.fire({
                            title: 'Siliniyor...',
                            text: 'Lütfen bekleyin.',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        $.ajax({
                            url: url,
                            type: 'POST',
                            success: function (data) {
                                if (data.success) {
                                    Swal.fire('Silindi!', data.message, 'success').then(() => {
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire('Hata!', data.message || 'Silme işlemi başarısız oldu.', 'error');
                                    $btn.prop('disabled', false); // Butonu tekrar aktif et
                                }
                            },
                            error: function () {
                                Swal.fire('Hata!', 'Sunucuya bağlanılamadı.', 'error');
                                $btn.prop('disabled', false); // Butonu tekrar aktif et
                            }
                        });
                    }
                });
            });
        });
    </script>
}
