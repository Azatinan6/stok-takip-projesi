@{
    Layout = null;
}

<!doctype html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <title>404 Hatası | WebAdmin - Yönetim Paneli</title>
    @await Component.InvokeAsync("Head")
</head>

<body>
    <div class="min-vh-100" style="background: url(/WebAdmin/assets/images/bg-2.png) top;">
        <div class="bg-overlay bg-light"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center py-5 mt-5">
                        <div class="position-relative">
                            <h1 class="error-title error-text mb-0">404</h1>
                            <h4 class="error-subtitle text-uppercase mb-0">Üzgünüz, sayfa bulunamadı</h4>
                            <p class="font-size-16 mx-auto text-muted w-50 mt-4">
                                Aradığınız sayfa mevcut değil, kaldırılmış ya da adı değiştirilmiş olabilir.
                            </p>
                        </div>
                        <div class="mt-4 text-center">
                            <a class="btn btn-primary" href="/Auth/Login">
                                Anasayfaya Dön
                            </a>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
        </div>
    </div>

    <!-- JS -->
    @await Component.InvokeAsync("Scripts")
</body>

</html>